
<div class="col-lg-4">
  <%= form_with model: task do |f| %>
   <label for="title" class="form-label"> <%= f.label :title %></label>
   <input type="task" class="form-control mb-1 mt-1" id="task-title" placeholder="What do you have to do today?"<%= f.text_field :title %>
</div>
  <div class="col-lg-4">
    <label for="details" class="form-label"><%= f.label :details %></label>
    <input type="task" class="form-control mb-1 mt-1"id="task-details" placeholder="oh really?"<%= f.text_field :details %>
    <div class="btn btn-primary btn-lg w-100"> <%= f.submit %> </div>
  </div>
  <% end %>
